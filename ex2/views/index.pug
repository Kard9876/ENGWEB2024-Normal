extends layout

block content
  header.w3-container.w3-blue-grey.w3-center
    h3= title

  .flex-box.flex-center
    table.w3-table-all
      tr 
        th idcontrato
        th objectoContrato
        th dataCelebracaoContrato
        th precoContratual
        th NIPC_entidade_comunicante
        th entidade_comunicante

      each c in contratos
        tr
          td
            a(href=`/${c._id}`)=c._id
          td=c.objectoContrato
          td=c.dataCelebracaoContrato
          td=c.precoContratual
          td
            a(href=`/entidades/${c.NIPC_entidade_comunicante}`)=c.NIPC_entidade_comunicante
          td=c.entidade_comunicante



  footer.w3-container.w3-blue-grey